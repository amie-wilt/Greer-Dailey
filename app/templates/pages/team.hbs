{{#with global.pages.team }}
    <div class="team-page">
        <div class="team-intro">
            {{> intro intro }}
        </div>
        <section class="team-content-container">
            <h1 class="team-header">{{ team-header }}</h1>
            {{#each team-members }}
                <span class="team-member-name-open-trigger-container">
                    <a href="#" class="team-member-name-open-trigger">{{ name }}</a>
                </span>
                <div class="team-member-info" itemscope itemtype="http://schema.org/Person">
                    <div class="team-member-info-wrapper"
                        {{#is name 'Joan Kradin'}} style="display: block;"{{/is}}
                            >
                        <button class="team-member-top-close-button">{{ button }}</button>
                        <h2 class="team-member-name" itemprop="name">{{ name }}</h2>
                        <p class="team-member-title" itemprop="jobTitle">{{ title }}</p>
                        <div class="team-member-bio">{{{ bio }}}</div>
                        <button class="team-member-bottom-close-button">{{ button }}</button>
                    </div>
                </div>
            {{/each}}
        </section>
    </div>
{{/with}}
