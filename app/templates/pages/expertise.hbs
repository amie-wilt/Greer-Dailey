{{#with global.pages.expertise }}
    <div class="expertise-page">
        <div class="expertise-intro">
            {{> intro intro }}
        </div>
        <div class="expertise-content">
            <h2 class="expertise-header">{{ subtitle }}</h2>
            {{#each sections }}
                <section id="{{ dasherize name }}">
                    <header>
                        <h1>{{ name }}</h1>
                    </header>
                    <p class="expertise-description">{{{ description }}}</p>
                    <div class="expertise-summary">
                        {{{ summary }}}
                    </div>
                </section>
            {{/each }}
        </div>
    </div>
{{/with}}
