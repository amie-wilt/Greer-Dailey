{{#with global.pages }}
    <div class="index-page">
        <div class="index-intro">
            {{> intro index.intro }}
        </div>
        <div class="index-content-container">
            <div class="index-content-inner-container">
                <h2 class="index-header">{{ expertise.subtitle }}</h2>
                <ul class="index-overview-list">
                    {{#each expertise.sections }}
                        <li>
                            <a href="#" class="expertise-list-link">{{ name }}</a>
                        </li>
                    {{/each }}
                </ul>
            </div>
        </div>
    </div>
{{/with}}
