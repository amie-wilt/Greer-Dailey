<nav class="primary-nav-container">
    <ul class="nav-list">
        {{#each global.pages }}
            {{#isnt @key 'index' }}
                <li>
                    <a href="{{ @key }}.html">{{ name }}</a>
                    {{#if sections }}
                        <ul class="nav-dropdown-list">
                            {{#each sections }}
                                <li>
                                    <a href="{{ dasherize ../name }}.html#{{ @key }}">{{ name }}</a>
                                </li>
                            {{/each }}
                        </ul>
                    {{/if }}
                </li>
            {{/isnt }}
        {{/each }}
    </ul>
</nav>
