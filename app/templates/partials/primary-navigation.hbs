<nav class="primary-nav-container">
    <ul class="primary-nav-list">
        {{#each global.pages }}
            {{#isnt @key 'index' }}
                <li {{#if sections}}class="dropdown"{{/if}}>
                    <a href="{{ @key }}.html" class="primary-nav-list-link{{#is @key ../../basename}} active{{/is}}">{{ name }}</a>
                    {{#if sections }}
                        <ul class="nav-dropdown-list">
                            {{#each sections }}
                                <li>
                                    <a href="{{ dasherize ../name }}.html#{{ @key }}" class="nav-dropdown-list-link">{{ name }}</a>
                                </li>
                            {{/each }}
                        </ul>
                    {{/if }}
                </li>
            {{/isnt }}
        {{/each }}
    </ul>
    <button class="mobile-menu-trigger">
        <span class="mobile-menu-trigger-text-wrapper">
            <span class="mobile-menu-trigger-text">Click to open the mobile menu</span>
        </span>
    </button>
</nav>
