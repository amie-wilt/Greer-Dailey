<div class="intro" style="background-image: url({{ image }});">
    <div class="intro-content">
        <h1 class="intro-title">{{{ title }}}</h1>
        {{#if subtitle }}
        <h2 class="intro-subtitle">{{{ subtitle }}}</h2>
        {{/if}}
        {{#if supporting-text }}
            <div class="intro-supporting-text">{{{ supporting-text }}}</div>
        {{/if}}
        {{#if button }}
            <button class="intro-button">{{ button }}</button>
        {{/if}}
    </div>
</div>
